# ===========================================================================
# Environment Variables — Eastern Healing Traditions
# Brand ID: eastern-healing-traditions
# Business Model: brick-and-mortar-primary
#
# Copy this file to ../../.env and fill in the values.
# NEVER commit the .env file to version control.
# ===========================================================================

# ---------------------------------------------------------------------------
# NEO4J — Graph database (structured facts, relationships, campaigns, leads)
# Shared database: all queries filter by :Droom label + brand_id
# ---------------------------------------------------------------------------

# Connection URI (bolt://, neo4j://, or neo4j+s:// for Aura)
NEO4J_URI=

# Authentication credentials
NEO4J_USERNAME=
NEO4J_PASSWORD=

# Database name (default: neo4j)
NEO4J_DATABASE=neo4j

# ---------------------------------------------------------------------------
# PINECONE — Vector database (semantic memory, similarity search)
# Shared index: graphelion-deux | Namespaces prefixed with droom-
# ---------------------------------------------------------------------------

# API key from https://app.pinecone.io/
PINECONE_API_KEY=

# ---------------------------------------------------------------------------
# AWS S3 — Object storage (creative assets, reports, backups)
# Shared bucket: droom | Key prefix: clients/eastern-healing-traditions/
# ---------------------------------------------------------------------------

# IAM access key with s3:GetObject, s3:PutObject, s3:ListBucket on arn:aws:s3:::droom
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Region (do not change unless bucket is moved)
AWS_DEFAULT_REGION=us-east-1

# ---------------------------------------------------------------------------
# ANTHROPIC CLAUDE — AI reasoning, content analysis via Claude Vision
# Used by: all 6 runtime agents, content ingestion, lead scoring
# ---------------------------------------------------------------------------

# API key from https://console.anthropic.com/ (starts with sk-ant-)
ANTHROPIC_API_KEY=

# ---------------------------------------------------------------------------
# OPENAI — Text embeddings for Pinecone (text-embedding-3-small, 1536 dim)
# Used by: content ingestion, scenario storage, similarity queries
# ---------------------------------------------------------------------------

# API key from https://platform.openai.com/ (starts with sk-)
OPENAI_API_KEY=

# ---------------------------------------------------------------------------
# GOOGLE ADS — Search ads, local service ads, YouTube ads
# Platforms served: google-search, youtube
# Budget allocation: $1,200/mo (Google Search) + $450/mo (YouTube)
# ---------------------------------------------------------------------------

# OAuth2 client credentials from Google Cloud Console
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=

# Developer token from Google Ads API Center
GOOGLE_ADS_DEVELOPER_TOKEN=

# OAuth2 refresh token (generated via OAuth flow)
GOOGLE_ADS_REFRESH_TOKEN=

# Manager account ID (if using MCC), format: XXX-XXX-XXXX
GOOGLE_ADS_LOGIN_CUSTOMER_ID=

# Client account ID, format: XXX-XXX-XXXX
GOOGLE_ADS_CUSTOMER_ID=

# ---------------------------------------------------------------------------
# META MARKETING — Facebook and Instagram ads
# Platforms served: facebook, instagram
# Budget allocation: $900/mo (Facebook) + $450/mo (Instagram)
# ---------------------------------------------------------------------------

# System user access token from Meta Business Suite (long-lived preferred)
META_ACCESS_TOKEN=

# App credentials from Meta Developers
META_APP_ID=
META_APP_SECRET=

# Ad account ID, format: act_XXXXXXXXXX
META_AD_ACCOUNT_ID=

# Meta Pixel ID for conversion tracking (set once pixel is installed)
META_PIXEL_ID=

# ---------------------------------------------------------------------------
# SENDGRID — Email (weekly reports, lead notifications, alerts)
# ---------------------------------------------------------------------------

# API key from https://app.sendgrid.com/ > Settings > API Keys
SENDGRID_API_KEY=

# Sender email address (must be verified in SendGrid)
SENDGRID_FROM_EMAIL=reports@droom.ai

# ---------------------------------------------------------------------------
# TWILIO — SMS notifications (hot leads, critical alerts)
# ---------------------------------------------------------------------------

# Account SID and Auth Token from https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# Twilio phone number for sending SMS, format: +1XXXXXXXXXX
TWILIO_PHONE=

# Recipient phone number for practitioner alerts, format: +1XXXXXXXXXX
TWILIO_RECIPIENT_PHONE=+12245410022

# ---------------------------------------------------------------------------
# N8N — Workflow automation (optional, defaults to localhost:5678)
# ---------------------------------------------------------------------------

# n8n instance URL
N8N_BASE_URL=http://localhost:5678

# n8n API key (if API access is enabled)
N8N_API_KEY=

# ---------------------------------------------------------------------------
# DASHBOARD — Analytics dashboard API (optional, defaults to localhost:8000)
# ---------------------------------------------------------------------------

# Dashboard backend URL
DASHBOARD_API_URL=http://localhost:8000

# Dashboard API key for authenticated endpoints
DASHBOARD_API_KEY=

# ---------------------------------------------------------------------------
# WEBSITE — Client website (optional, defaults to production URL)
# ---------------------------------------------------------------------------

# Website URL
WEBSITE_URL=https://easternhealingtraditions.com

# ---------------------------------------------------------------------------
# TRACKING — Analytics and conversion tracking IDs
# Set these once tracking pixels/tags are installed on the website
# ---------------------------------------------------------------------------

# Google Analytics 4 Measurement ID, format: G-XXXXXXXXXX
GA_MEASUREMENT_ID=

# Google Ads conversion tracking
GOOGLE_ADS_CONVERSION_ID=
GOOGLE_ADS_CONVERSION_LABEL=
